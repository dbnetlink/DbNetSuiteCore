@page
@model GenericListModel
@using DbNetSuiteCore.Components;
@using DbNetSuiteCore.Enums;
@using DbNetSuiteCore.Web.UI.Models;
@using DbNetSuiteCore.Web.UI.Pages.Samples.DbNetGrid;
@{
    DbNetGridCore employeesGrid = new DbNetGridCore(DataSourceType.List);
    employeesGrid.AddList(Model.Employees, HttpContext);
    employeesGrid.Column(nameof(Employee.Gender)).Lookup<string>(new Dictionary<string, string>() { { "M", "Male" }, { "F", "Female" } });
    employeesGrid.Column(nameof(Employee.PayFrequency)).Lookup<int>(new Dictionary<int, string>() { { 1, "Weekly" }, { 2, "Monthly" } });
    employeesGrid.Column(nameof(Employee.EmployeeKey)).PrimaryKey();
    employeesGrid.Column(new string[] { nameof(Employee.BirthDate), nameof(Employee.HireDate), nameof(Employee.StartDate), nameof(Employee.EndDate) }).Format("d");

    employeesGrid.Update = true;
    employeesGrid.EditControl.LayoutColumns = 2;

    @employeesGrid.Render()
}