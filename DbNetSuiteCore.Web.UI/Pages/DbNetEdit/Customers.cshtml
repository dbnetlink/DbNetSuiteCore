@page
@using DbNetSuiteCore.Components;
@using DbNetSuiteCore.Enums.DbNetEdit;
@using DbNetSuiteCore.Enums;
@{
    DbNetEditCore customersEdit = new DbNetEditCore("northwind", "customers");
    customersEdit.Columns = new List<string>() { "CustomerId", "CompanyName", "ContactName", "ContactTitle", "Address", "City", "Region", "PostalCode", "Country", "Phone", "Fax" };
    customersEdit.SetColumnLookup("country");
    customersEdit.SetColumnLookup("region");
    customersEdit.SetControlType("region", EditControlType.SuggestLookup);
    customersEdit.SetControlType("country", EditControlType.TextBoxLookup);
    customersEdit.SetColumnSize("address", 40);
    customersEdit.QuickSearch = true;
    customersEdit.LayoutColumns = 3;
    customersEdit.Insert = true;
    customersEdit.Delete = true;
    customersEdit.ToolbarPosition = ToolbarPosition.Top;
    customersEdit.ToolbarButtonStyle = ToolbarButtonStyle.Text;
    customersEdit.SetColumnBrowse(new string[] { "companyname", "city", "country", "region" });

    @customersEdit.Render()
}