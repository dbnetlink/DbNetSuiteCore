@page
@using DbNetSuiteCore.Components;
@using DbNetSuiteCore.Enums.DbNetEdit;
@using DbNetSuiteCore.Enums;
@{
    DbNetEditCore productsEdit = new DbNetEditCore("northwind", "products");
    productsEdit.Columns = new List<string>() { "ProductId", "ProductName", "CategoryID", "SupplierID", "UnitPrice" };

    productsEdit.Column("categoryid").Lookup(new Lookup("Categories", "CategoryID", "CategoryName"));
    productsEdit.Column("SupplierID").Lookup(new Lookup("Suppliers", "SupplierID", "CompanyName"));
    productsEdit.Column("UnitPrice").Format("c").DataType(typeof(Decimal));
    productsEdit.Column("ProductId").Hidden();
    productsEdit.Column("CategoryID").Label("Category");
    productsEdit.Column("SupplierID").Label("Supplier");

    @productsEdit.Render()

    DbNetEditCore customersEdit = new DbNetEditCore("northwind", "customers");
    customersEdit.Columns = new List<string>() { "CustomerId", "CompanyName" };

    @customersEdit.Render()
}
