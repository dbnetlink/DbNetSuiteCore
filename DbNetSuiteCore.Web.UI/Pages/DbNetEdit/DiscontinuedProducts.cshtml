@page
@using DbNetSuiteCore.Enums.DbNetEdit;
@using DbNetSuiteCore.Components;

@{
    DbNetEditCore productsEdit = new DbNetEditCore("northwind","products");
    productsEdit.Column("discontinued").DataType(typeof(Boolean));
    productsEdit.Column("categoryid").Lookup(new Lookup("Categories", "CategoryID", "CategoryName"));
    productsEdit.Column("SupplierID").Lookup(new Lookup("Suppliers", "SupplierID", "CompanyName"));
    productsEdit.FixedFilterSql = "discontinued = @discontinued";
    productsEdit.FixedFilterParams["discontinued"] = true;

    @productsEdit.Render()
}