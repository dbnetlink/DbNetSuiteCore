@namespace DbNetSuiteCore.Views.DbNetGrid
@using DbNetSuiteCore.ViewModels.DbNetCombo;
@using System.Data
@model ComboViewModel

@{
    if (Model.AddFilter)
    {
        <input class="dbnetcombo" type="text" />
    }
    <select class="dbnetcombo" @Attributes()></select>
}
@functions
{
    public string Attributes()
    {
        List<string> dataAttributes = new List<string>();

        if (Model.MultipleSelect)
        {
            dataAttributes.Add($"multiple");
        }
        if (Model.Size > 1)
        {
            dataAttributes.Add($"size={Model.Size}");
        }

        return string.Join(" ", dataAttributes.ToArray());
    }
}